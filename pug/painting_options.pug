extends core/base.pug

block title 
  title Варианты картины

block content

  .page 

    include core/header.pug

    .content 

      // breadcrumbs
      .breadcrumbs
        .container 
          ul 
            li 
              a(href="#") Главная
            li 
              span Конструктор
      // /breadcrumbs

      // options
      .options
        .container 
          .options__section 
            .options__title Картины по номерам 40х50
            .options__cards 
              .row.justify-content-center.row-cols-xl-3.row-cols-md-2.row-cols-1
                .col 
                  mixin options_card(imgSrc, name, imgSrcMobile)
                    a(href="#").options__card 
                      .options__content 
                        .options__img 
                          picture 
                            source(media="(max-width: 678px)", srcset= imgSrcMobile)
                            img(src= imgSrc, alt="")
                        .options__icons 
                          .row
                            .col-md-12.col-6
                              .options__icon-item
                                .options__icon 
                                  img(src="img/options_icon/img-7.svg", alt="")
                                p 6 цветов
                            .col-md-12.col-6
                              .options__icon-item
                                .options__icon 
                                  img(src="img/options_icon/img-2.png", alt="")
                                p 12+ часов
                            .col-md-12.col-6
                              .options__icon-item
                                .options__icon 
                                  img(src="img/options_icon/img-6.svg", alt="")
                                p Уникальный подарок
                            .col-md-12.col-6
                              .options__icon-item
                                .options__icon 
                                  img(src="img/options_icon/img-4.png", alt="")
                                p 40×50 см
                      .options__name= name
                  +options_card('img/options/img-12.png', 'Классик', 'img/options/img-12-mobile.png')
                .col 
                  +options_card('img/options/img-13.png', 'Гранж', 'img/options/img-13-mobile.png')
                .col 
                  +options_card('img/options/img-14.png', 'Ретро', 'img/options/img-14-mobile.png')
          a(href="#").options__btn
            i
              svg(class="icon-arrow")
                use(xlink:href="img/sprite.svg#arrow")
            | Назад
      // /options

    include core/footer.pug
